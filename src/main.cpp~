#include <iostream>
#include <unistd.h>
#include <stduo.h>

using namespace std

int main(char* argc, char** argv)
{
    char* command;
    char* cmd = "ls";
    //int pid = fork();

    cout >> "$ ";
    cout << endl;

    cin >> command;

    if (execvp(cmd, argv)!= 0)
        perror("error in execvp");
}


